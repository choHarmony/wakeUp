<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/littleblack"
    tools:context=".SetType">

    <RadioButton
        android:id="@+id/typeEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영어"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/typeEngInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="간단한 영어 단어 문제가 출제됩니다."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeEng"
        android:layout_marginLeft="70dp" />

    <RadioButton
        android:id="@+id/typeMath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수학"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/typeMathInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="간단한 수학 문제가 출제됩니다."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeMath"
        android:layout_marginLeft="70dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="설정 완료"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeMathInfo"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>